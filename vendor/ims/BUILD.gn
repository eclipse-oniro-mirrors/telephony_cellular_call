import("//base/telephony/core_service/telephony.gni")
import("//build/ohos.gni")

SOURCE_DIR = "//base/telephony/cellular_call/vendor/ims"

ohos_shared_library("tel_ims") {
  sources = [
    "$SOURCE_DIR/services/src/ims_handler.cpp",
    "$SOURCE_DIR/services/src/ims_register.cpp",
    "$SOURCE_DIR/services/src/ims_ril_request.cpp",
    "$SOURCE_DIR/services/src/ims_service.cpp",
    "$SOURCE_DIR/services/src/ims_stub.cpp",
    "//base/telephony/cellular_call/ims_interfaces/src/ims_callback_proxy.cpp",
  ]

  include_dirs = [
    "//base/telephony/call_manager/interfaces/innerkits",
    "//base/telephony/cellular_call/ims_interfaces/include",
    "//base/telephony/cellular_call/services/common/include",
    "$SOURCE_DIR/services/include",
  ]

  defines += [
    "TELEPHONY_LOG_TAG = \"ims\"",
    "LOG_DOMAIN = 0xD002B01",
  ]

  configs = [ "//base/telephony/core_service/utils:telephony_log_config" ]

  deps = [
    "//base/telephony/core_service/interfaces/innerkits:tel_core_service_api",
    "//utils/native/base:utils",
  ]

  external_deps = [
    "eventhandler:libeventhandler",
    "ipc:ipc_core",
    "ril_adapter:hril_innerkits",
    "safwk:system_ability_fwk",
    "samgr_standard:samgr_proxy",
    "startup_l2:syspara",
  ]

  if (is_standard_system) {
    external_deps += [ "hiviewdfx_hilog_native:libhilog" ]
  } else {
    external_deps += [ "hilog:libhilog" ]
  }

  part_name = "cellular_call"
  subsystem_name = "telephony"
}
