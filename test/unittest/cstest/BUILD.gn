import("//build/test.gni")

ohos_unittest("tel_cellular_call_cs_test") {
  subsystem_name = "telephony"
  part_name = "cellular_call"
  test_module = "tel_cellular_call_cs_test"
  module_out_path = part_name + "/" + test_module

  sources = [
    "//base/telephony/cellular_call/framework/cellular_call_client.cpp",
    "//base/telephony/cellular_call/framework/cellular_call_proxy.cpp",
    "cs_test.cpp",
  ]

  include_dirs = [
    "//base/telephony/cellular_call/services/manager/include",
    "//base/telephony/cellular_call/services/common/include",
    "//base/telephony/cellular_call/interfaces",
    "//base/telephony/call_manager/interfaces/innerkits",
  ]

  configs = [ "//base/telephony/core_service/utils:telephony_log_config" ]

  deps = [
    "//third_party/googletest:gtest_main",
    "//utils/native/base:utils",
  ]

  external_deps = [
    "core_service:tel_core_service_api",
    "ipc:ipc_core",
    "safwk:system_ability_fwk",
    "samgr_standard:samgr_proxy",
  ]

  if (is_standard_system) {
    external_deps += [ "hiviewdfx_hilog_native:libhilog" ]
  } else {
    external_deps += [ "hilog:libhilog" ]
  }
}

group("unittest") {
  testonly = true
  deps = [ ":tel_cellular_call_cs_test" ]
}
